{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "config/*": ["src/config/*"],
      "constants/*": ["src/constants/*"],
      "controllers/*": ["src/controllers/*"],
      "middleware/*": ["src/middleware/*"],
      "database/*": ["src/database/*"],
      "routes/*": ["src/routes/*"],
      "utils/*": ["src/utils/*"],
      "services/*": ["src/services/*"],
      "plugins/*": ["src/plugins/*"]
    }
  },
  "exclude": ["node_modules"]
}
